@model IEnumerable<CMSShoppingCart.Models.PageVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Page", "Create")
</p>

@if (!Model.Any())
{
    <h1 class="text-center">There are no pages.</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
            <th>
                HasSidebar
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "deletePage" })
                </td>
            </tr>
        }

    </table>
}

@section Scripts {
    @*// @Scripts.Render("~/bundles/jqueryval")*@

    <script type="text/javascript">
        $(function () {
            $('a .deletePage').click(function () {
                //if (!confirm("Confirm page deletion!")) {
                //    return false;
                //}
                if (!confirm("Confirm page deletion!")) return false;
            }
            );
        });
    </script>

}

